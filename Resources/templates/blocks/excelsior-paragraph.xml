<type name="excelsior-paragraph"
      xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.1.xsd">
    <meta>
        <title lang="de">Absatz</title>
        <title lang="en">Paragraph</title>
    </meta>

    <properties>

        <property name="kicker" type="text_line">
            <meta>
                <title lang="en">Kicker</title>
                <title lang="de">Kicker</title>
            </meta>
        </property>

        <property name="Headline" type="text_line">
            <meta>
                <title lang="en">Headline</title>
                <title lang="de">Überschrift</title>
            </meta>
        </property>

        <property name="subheadline" type="text_line">
            <meta>
                <title lang="en">Sub heading</title>
                <title lang="de">Unter-Überschrift</title>
            </meta>
        </property>

        <property name="multimedia" type="media_selection">
            <meta>
                <title lang="en">Multimedia</title>
                <title lang="de">Multimedia</title>
            </meta>

            <params>
                <param name="type" value="image, video"/>
            </params>
        </property>

        <property name="text" type="text_editor">
            <meta>
                <title lang="en">Text</title>
                <title lang="de">Text</title>
            </meta>
        </property>

    </properties>
</type>
